{
  "name": "ai-formula-scanner",
  "version": "0.1.0",
  "description": "AI-powered formula scanner with LaTeX recognition",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm-run-all -p dev:web tauri:wait",
    "dev:web": "vite dev --port 5173 --strictPort",
    "dev:open": "vite dev --open --port 5173 --strictPort",
    "open:ui": "powershell -NoProfile -Command Start-Process 'http://localhost:5173'",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "tauri": "tauri",
    "start": "npm run dev",
    "tauri:wait": "wait-on http://localhost:5173 && tauri dev"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tauri-apps/cli": "^1.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "sharp": "^0.34.3",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "to-ico": "^1.1.5",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "katex": "^0.16.9",
    "lucide-svelte": "^0.539.0",
    "mathjax": "^3.2.2",
    "uuid": "^9.0.1"
  }
}
